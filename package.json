    "webpack-bundle-analyzer": "^2.9.2",
    "webpack-dev-server": "^2.11.1",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "continuation-local-storage": "^3.2.1",
    "csv-parser": "^1.12.0",
    "devtron": "^1.4.0",
    "electron-debug": "1.4.0",
    "electron-log": "^2.2.14",
    "electron-unhandled": "^1.1.0",
    "font-awesome": "^4.7.0",
